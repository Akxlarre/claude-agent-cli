{
  "$schema": "https://json.schemastore.org/mcp.json",
  "mcpServers": {
    "typescript": {
      "command": "npx",
      "args": [
        "-y",
        "ts-lsp-mcp"
      ]
    },
    "angular": {
      "command": "npx",
      "args": [
        "-y",
        "@angular/cli@latest",
        "mcp"
      ]
    },
    "supabase": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@latest",
        "--access-token",
        "YOUR_SUPABASE_PERSONAL_ACCESS_TOKEN"
      ],
      "_comment": "Obt√©n tu Personal Access Token en: https://supabase.com/dashboard/account/tokens"
    }
  }
}